<div class='photo-card'>
  <a href='{{largeImageURL}}'>
    <div class='img--container'>
      <img class='image' src='{{webformatURL}}' alt='{{tags}}' loading='lazy' />
      <div class='download--container'>
        <a href='{{previewURL}}' class='download--btn' download=''>
          low
        </a>
        <a href='{{webformatURL}}' class='download--btn' download=''>
          normal
        </a>
        <a href='{{largeImageURL}}' class='download--btn' download=''>
          hight
        </a>
      </div>
    </div>
  </a>
  <div class='info'>
    <p class='info-item'>
      <b>Likes</b>
      <span>{{likes}}</span>
    </p>
    <p class='info-item'>
      <b>Views</b>
      <span>{{views}}</span>
    </p>
    <p class='info-item'>
      <b>Comments</b>
      <span>{{comments}}</span>
    </p>
    <p class='info-item'>
      <b>Downloads</b>
      <span>{{downloads}}</span>
    </p>
  </div>
</div>